{
  "version": 2,
  "rewrites": [
    {
      "source": "/",
      "destination": "/public/google-style.html"
    },
    {
      "source": "/google-style.html",
      "destination": "/public/google-style.html"
    },
    {
      "source": "/index.html",
      "destination": "/public/index.html"
    },
    {
      "source": "/(.*\\.(html|css|js|svg|png|jpg|jpeg|gif))",
      "destination": "/public/$1"
    }
  ],
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  }
}
